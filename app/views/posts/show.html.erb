<div class="container">
  <div class="row">

    <div class="col-sm-8">
      <h1><%= @post.title %></h1>
      <p>Posted at: <%= @post.created_at %></p>
      <p class="lead"><%= @post.description %></p>
      <%= render '/shared/share_widget' %>
        <hr>
      <%= markdown(@post.body) %>
      <%= render '/shared/share_widget' %>
      <%= render '/shared/comments' %>

    </div>

    <div class="col-sm-4">
      <%= render '/shared/sidebar' %>
    </div>

  </div>
</div>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Created</th>
    <th>Edited</th>
    <th>Views</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td>views</td>
      <td>Edit</td>
      <td><%= link_to "Delete", post, method: :delete %></td>
    </tr>

  <% end %>
</table>
